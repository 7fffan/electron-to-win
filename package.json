{
  "name": "NoLiarAI",
  "version": "1.0.1",
  "description": "NoLiarAI",
  "main": "main.js",
  "homepage": "",
  "build": {
    "appId": "com.boxrom.ai",
    "productName": "谎伴智能助手",
    "asar": true,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "favicon.icns"
    },
    "dmg": {
      "title": "谎伴智能助手",
      "icon": "favicon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./favicon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "favicon.ico",
      "uninstallerIcon": "favicon.ico",
      "installerHeaderIcon": "favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "scripts": {
    "start": "electron .",
    "dist-win": "electron-builder --win --x64",
    "dist-linux": "electron-builder --linux --x64"
  },
  "repository": {
    "type": "git",
    "url": "main"
  },
  "keywords": [
    "electron",
    "angular"
  ],
  "author": "Lingport",
  "license": "ISC",
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "qiao-is-online": "^1.0.6"
  },
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^24.6.3"
  }
}
